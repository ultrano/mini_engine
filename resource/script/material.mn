
class Material
{
	constructor(shader)
	{
		m_shader = shader;
		m_values = {};
	};
	func setTexture(name, texture)
	{
		if (::typeof(texture) != ::Texture.type) return;
		var loc = m_shader.getUniformLocation(name);
		if (loc == null) return;
		m_values.insert(loc, texture);
	};
	var m_shader;
	var m_values;
};